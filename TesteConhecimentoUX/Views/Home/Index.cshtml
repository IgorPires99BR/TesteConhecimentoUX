@{
    ViewBag.Title = "Home Page";
}
<main>
    <div class="row">
        @using (Html.BeginForm("Confirmacao", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <label for="nome">Nome:</label>
                <input type="text" class="form-control" name="Nome" id="Nome" placeholder="Insira seu nome" maxlength="50" onkeypress="formataNome()" />
            </div>
            <div class="form-group">
                <label for="dataNascimento">Data de Nascimento:</label>
                <input type="date" class="form-control" name="DataNascimento" placeholder="01/01/0001" maxlength="3" />
            </div>
            <div class="form-group">
                <label for="telefone">Telefone:</label>
                <input class="form-control" id="Telefone" name="Telefone" placeholder="(11) 9 1111-1111" maxlength="15" onkeypress="formataTelefone()" />
            </div>
            <div class="form-group">
                <label for="Pacote">Pacote</label>
                <select class="form-control" name="pacote" placeholder="Selecione seu pacote">
                    @foreach (var pacote in (IEnumerable<TesteConhecimentoUX.Models.Pacote>)ViewBag.Pacotes)
                    {
                        <option value="@pacote.CodPacote">@pacote.Descricao</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="Atividade">Atividades:</label><br />
                @foreach (var atividade in (IEnumerable<TesteConhecimentoUX.Models.Atividade>)ViewBag.Atividades)
                {
                    <input type="checkbox" name="Atividade" value="@atividade.CodAtividade" />@atividade.DescAtv<br />
                }
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        }
    </div>
</main>

